---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';

const metadata = {
  title: 'luka2chat - Independent Developer',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Independent Developer Portfolio"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'View Projects',
        href: 'https://github.com/luka2chat',
        icon: 'tabler:download',
      },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Meet <span class="hidden sm:inline">the creative mind behind</span> <span
        class="text-accent dark:text-white highlight">luka2chat</span
      >, Independent Developer
    </Fragment>

    <Fragment slot="subtitle">
      A passionate independent developer who has crafted numerous innovative products, bringing creative ideas to life through code and technology.
    </Fragment>

    <Fragment slot="image">
      <!-- <YouTube id="gxBkghlglTg" title="luka2chat - Independent Developer Portfolio" /> -->
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="About luka2chat"
    subtitle="luka2chat is an independent developer with a passion for creating innovative digital products. With years of experience in software development, I've built numerous applications, tools, and solutions that solve real-world problems. From mobile apps to web platforms, each project reflects my commitment to quality, user experience, and technological excellence."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="luka2chat's Development Impact"
    subtitle="The numbers below showcase the scale and reach of the independent products I've developed and the positive impact they've had on users worldwide."
    stats={[
      { title: 'Products Created', amount: '25+' },
      { title: 'Active Users', amount: '50K+' },
      { title: 'Code Commits', amount: '2.5K' },
      { title: 'Years Experience', amount: '8+' },
    ]}
  />

  <!-- Brands Widget ****************** -->

  <Brands
    title="Technologies & Platforms"
    subtitle="I work with a diverse range of technologies and platforms to create robust, scalable, and user-friendly applications."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
        alt: 'Ebay',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png',
        alt: 'Youtube',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
        alt: 'Microsoft',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Node JS',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
        alt: 'Google',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png',
        alt: 'Meta',
        width: 1280,
        height: 720,
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
        alt: 'Yahoo',
        width: 1280,
        height: 720,
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="What services do I provide?"
    subtitle="As an independent developer, I offer a comprehensive range of development services to bring your ideas to life and solve complex technical challenges."
    items={[
      {
        title: 'Custom Software Development',
        description:
          'Building tailored applications and software solutions that meet your specific business needs and requirements.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Mobile App Development',
        description:
          'Creating native and cross-platform mobile applications for iOS and Android with modern frameworks and best practices.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Web Development & Consulting',
        description:
          'Providing expert guidance and development services for web applications, from concept to deployment and maintenance.',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Core Development Principles"
    subtitle="My development approach is guided by these key principles that ensure high-quality, maintainable, and user-focused products."
    columns={3}
    items={[
      {
        title: 'Clean & Maintainable Code',
        description:
          'Writing code that is not only functional but also clean, well-documented, and easy to maintain for long-term success.',
        icon: 'tabler:artboard',
      },
      {
        title: 'User-Centered Design',
        description: 'Prioritizing user experience and interface design to create intuitive and engaging applications.',
        icon: 'tabler:picture-in-picture',
      },
      {
        title: 'Scalable Architecture',
        description:
          'Building applications with scalable architecture that can grow with your business needs and user base.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Performance Optimization',
        description: 'Ensuring fast loading times and optimal performance across all devices and platforms.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Security Best Practices',
        description:
          'Implementing robust security measures to protect user data and maintain application integrity.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Continuous Innovation',
        description: 'Staying updated with the latest technologies and trends to deliver cutting-edge solutions.',
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'What types of products have you developed?',
        description:
          'I have developed a wide range of products including mobile applications, web platforms, productivity tools, e-commerce solutions, and custom business software. Each product is tailored to solve specific problems and meet unique user needs.',
      },
      {
        title: 'How do you approach new projects?',
        description:
          'I follow a collaborative approach that starts with understanding your requirements, planning the architecture, developing iteratively with regular feedback, and ensuring quality through testing before deployment.',
      },
      {
        title: 'Can you work on existing projects?',
        description:
          'Yes, I can help improve, maintain, or extend existing projects. I can review code, fix issues, add new features, or help migrate to newer technologies.',
      },
      {
        title: 'What technologies do you specialize in?',
        description:
          'I work with modern web technologies (React, Vue, Node.js), mobile development (React Native, Flutter), databases, cloud services, and various APIs. I choose the best technology stack for each project.',
      },
      {
        title: 'How do you ensure project quality?',
        description:
          'Quality is ensured through comprehensive testing, code reviews, performance optimization, security audits, and ongoing maintenance. I also provide documentation and support for smooth project handover.',
      },
      {
        title: 'What is your development process?',
        description:
          "My process includes requirement analysis, design planning, development sprints, regular client communication, testing phases, and deployment. I maintain transparency throughout the project lifecycle.",
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Let's discuss your project"
    subtitle="I'm here to help bring your ideas to life and answer any questions about development services."
    columns={4}
    items={[
      {
        title: 'Phone',
        icon: 'tabler:phone',
        callToAction: {
          target: '_blank',
          text: 'Call us',
          href: '/',
          variant: 'link',
        },
      },
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'Write to us',
          href: '/',
          variant: 'link',
        },
      },
      {
        title: 'Chat with sales',
        icon: 'tabler:message-circle',
        callToAction: {
          target: '_blank',
          text: 'Start chatting',
          href: '/',
          variant: 'link',
        },
      },
      {
        title: 'Chat with support',
        icon: 'tabler:message-circle',
        callToAction: {
          target: '_blank',
          text: 'Start chatting',
          href: '/',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'View Projects',
        href: 'https://github.com/luka2chat',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">Ready to start your project?</Fragment>

    <Fragment slot="subtitle">
      Let's collaborate to turn your ideas into reality. I'm here to help you build innovative solutions that make a difference.
    </Fragment>
  </CallToAction>
</Layout>
