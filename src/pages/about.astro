---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Elevate your online presence with our <br />
      <span class="text-accent dark:text-white highlight"> Beautiful Website Templates</span>
    </Fragment>

    <Fragment slot="subtitle">
      We are dedicated to creating innovative digital solutions that empower businesses and individuals to achieve their goals. With years of experience in software development, we craft products that solve real-world problems and make a positive impact.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about us"
    stats={[
      { title: 'Projects', amount: '25+' },
      { title: 'Users', amount: '50K+' },
      { title: 'Technologies', amount: '12+' },
      { title: 'Experience Years', amount: '8+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our expertise"
    subtitle="We specialize in various domains of software development, bringing expertise and innovation to every project we undertake."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Web Development',
        description:
          'Modern web applications built with cutting-edge technologies, focusing on performance, scalability, and user experience.',
        icon: 'tabler:template',
      },
      {
        title: 'Mobile Development',
        description:
          'Native and cross-platform mobile applications for iOS and Android, delivering seamless user experiences across devices.',
        icon: 'tabler:template',
      },
      {
        title: 'AI Integration',
        description:
          'Intelligent solutions powered by artificial intelligence and machine learning, enhancing functionality and automation.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'E-commerce',
        description:
          'Complete e-commerce solutions with secure payment processing, inventory management, and customer engagement features.',
        icon: 'tabler:template',
      },
      {
        title: 'Data Analytics',
        description:
          'Advanced data processing and visualization tools that help businesses make informed decisions based on insights.',
        icon: 'tabler:template',
      },
      {
        title: 'Cloud Solutions',
        description:
          'Scalable cloud-based applications and infrastructure that grow with your business needs and requirements.',
        icon: 'tabler:template',
      },
      {
        title: 'API Development',
        description:
          'Robust and well-documented APIs that enable seamless integration between different systems and platforms.',
        icon: 'tabler:template',
      },
      {
        title: 'Security',
        description:
          'Implementation of industry-standard security measures to protect user data and maintain application integrity.',
        icon: 'tabler:template',
      },
      {
        title: 'Consulting',
        description:
          'Expert guidance on technology choices, architecture design, and best practices for software development projects.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our values"
    subtitle="We believe in creating technology that makes a positive difference, guided by principles that ensure quality, ethics, and customer satisfaction."
    items={[
      {
        title: 'Customer-centric approach',
        description:
          'Every decision we make is centered around delivering value to our customers and exceeding their expectations through quality solutions.',
      },
      {
        title: 'Continuous Innovation',
        description:
          'We stay at the forefront of technology trends, continuously learning and adapting to provide cutting-edge solutions.',
      },
      {
        title: 'Ethical Practices',
        description:
          'We maintain the highest standards of integrity in all our work, ensuring transparency, honesty, and respect in every interaction.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Achievements"
    subtitle="Our commitment to excellence has led to numerous successful projects and positive outcomes for our clients and users worldwide."
    isReversed={true}
    callToAction={{
      text: 'See more',
      href: '/',
    }}
    items={[
      {
        title: 'Global reach',
        description: 'Our products and services have reached users across different continents, making a worldwide impact.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive customer feedback and reviews',
        description:
          'Consistently high ratings and positive feedback from clients who have experienced the quality of our work.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Recognition for innovation and quality',
        description:
          'Acknowledgment from industry peers and communities for our innovative approaches and high-quality deliverables.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in touch"
    tagline="Contact us"
    columns={2}
    items={[
      {
        title: 'Chat with us',
        description:
          'Start a conversation with our team to discuss your project requirements and get expert advice on your development needs.',
        icon: 'tabler:messages',
      },
      {
        title: 'Email us',
        description:
          'Send us a detailed message about your project, and we will get back to you with a comprehensive response and next steps.',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>